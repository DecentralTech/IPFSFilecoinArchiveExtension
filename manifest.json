{
  "manifest_version": 2,
  "version": "0.1.4",
  "name": "Save as IPFS",
  "description": "Save active tab as MHTML web page archive file format with a single click",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "pageCapture",
    "activeTab",
    "downloads",
    "notifications"
  ],
  "icons": {
    "16": "data/icons/logo.png",
    "19": "data/icons/logo.png",
    "32": "data/icons/logo.png",
    "38": "data/icons/logo.png",
    "48": "data/icons/logo.png",
    "64": "data/icons/logo.png",
    "128": "data/icons/logo.png",
    "256": "data/icons/logo.png",
    "512": "data/icons/logo.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "data/icons/logo.png",
      "19": "data/icons/logo.png",
      "32": "data/icons/logo.png",
      "38": "data/icons/logo.png",
      "48": "data/icons/logo.png",
      "64": "data/icons/logo.png"
    }
  },
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  }
}
